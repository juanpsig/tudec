{% extends '::login.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">TGUDEC - Identificación</h3>
            </div>
            <div class="panel-body">
                <form id="login-form" class="login-form" action="{{ path("fos_user_security_check") }}" method="post">
                    <fieldset>
                        <div class="form-group">
                            <input id="username" name="_username" class="form-control" placeholder="Nombre de usuario" type="text" autofocus>
                        </div>
                        <div class="form-group">
                            <input id="password" name="_password" class="form-control" placeholder="Contraseña" type="password" value="">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input name="remember" type="checkbox" value="Remember Me">Recordarme
                            </label>
                        </div>
                        {{ dump() }}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                        <!-- Change this to a button or input when using this as a form -->
                        <a href="index.html" class="btn btn-lg btn-success btn-block">Aceptar</a>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    {% endblock %}
