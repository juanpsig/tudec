{% extends '::index.html.twig' %}
{% block contenido %}
    <h1>Programas</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ programa.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ programa.nombre }}</td>
            </tr>
            <tr>
                <th>Facultad</th>
                <td>{{ programa.facultad }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ programa.estado }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('programas_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('programas_edit', { 'id': programa.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
